# OpenAI configuration
OPENAI_API_KEY=sk-xxxxx
OPENAI_MODEL=gpt-4o-mini
# Optional: override base URL
# OPENAI_API_URL=https://api.openai.com/v1/chat/completions

# Agent behavior
# Enable summarization (true/false)
AGENT_SUMMARY=false
# Number of recent messages to keep when summarization is enabled
AGENT_SUMMARY_KEEP=5
# Optional: override default instructions
# AGENT_INSTRUCTIONS=You are a helpful, precise assistant.

# Tavily (optional web search)
# TAVILY_API_KEY=tvly-xxxxx
# Optional: override Tavily API URL
# TAVILY_API_URL=https://api.tavily.com/search
